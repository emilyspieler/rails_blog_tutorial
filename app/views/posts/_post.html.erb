  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-md-3 center">
        <div class="card mb-4 shadow-sm text-center">
          <div class="card-header">
            <div class="my-0 font-weight-normal">
              <h2><%= post.title %></h2>
            </div>
          </div>
            <div class="card-body">
              <h4><%= post.body %></h4>
              <h5><%= link_to "Read More", post_path(post), :class => 'btn btn-default' %><h5>
          </div>
      </div>
    </div>
  <% end %>
</div>
