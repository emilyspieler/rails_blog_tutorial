<h1>Login</h1>
   <%= form_tag '/login' do %>
   <%= label_tag :username %>
   <%= text_field_tag :username, 'Username', class: "form-control" %><br>
   <%= label_tag :password %>
   <%= password_field_tag :password, 'Password', class: "form-control" %><br>
   <%= submit_tag "Login", class: "btn btn-primary" %>
<%end%>

